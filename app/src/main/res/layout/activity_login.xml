<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/loginBackground">

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="189dp"
            android:layout_height="177dp"
            app:srcCompat="@drawable/logosinicukur" />

        <EditText
            android:id="@+id/usernameText_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/formBackground"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_18sdp"
            android:singleLine="true"
            android:textColor="@color/lightWhite"
            android:textColorHint="@color/formHintBackground"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/passwordText_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="32dp"
            android:background="@color/formBackground"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_18sdp"
            android:singleLine="true"
            android:textColor="@color/lightWhite"
            android:textColorHint="@color/formHintBackground"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/showPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35sp"
            android:layout_marginBottom="23dp"
            android:buttonTint="@color/formHintBackground"
            android:text="Show Password"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_createaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-medium"
            android:text="Create Account?"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/signup_layout"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="189dp"
            android:layout_height="177dp"
            app:srcCompat="@drawable/logosinicukur" />

        <EditText
            android:id="@+id/usernameText_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/formBackground"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_18sdp"
            android:textColor="@color/lightWhite"
            android:textColorHint="@color/formHintBackground"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/passwordText_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginTop="10sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/formBackground"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Password"
            android:paddingStart="@dimen/_18sdp"
            android:inputType="textPassword"
            android:textColor="@color/lightWhite"
            android:textColorHint="@color/formHintBackground"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/showPassword_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="35sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="23dp"
            android:buttonTint="@color/formHintBackground"
            android:text="Show Password"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/signButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btn_allreadyaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-medium"
            android:text="Already Have Account?"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>